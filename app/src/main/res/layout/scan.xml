<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="isomora.com.greendoctor.Maverick.com.greendoctor.MainActivity" android:background="@android:color/holo_green_dark">

    <Button
            android:id="@+id/mCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonTakePhoto"
            app:layout_constraintTop_toBottomOf="@+id/mPhotoImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:textColor="@android:color/background_light"
            android:background="@color/ic_launcher_background"/>
    <Button
            android:id="@+id/mGalleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSelectPhoto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mPhotoImageView"
            android:textColor="@android:color/background_light" android:background="@color/ic_launcher_background"/>


    <ImageView
            android:id="@+id/mPhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:contentDescription="@string/descriptionImage"
            app:srcCompat="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:text="@string/buttonDiagnose"
            android:layout_width="393dp"
            android:layout_height="57dp"
            android:id="@+id/mDetectButton"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/ic_launcher_background" android:textColor="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>