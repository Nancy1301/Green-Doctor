<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" android:id="@+id/linearLayout">


    <ImageButton
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_marginTop="25dp" android:layout_marginEnd="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            tools:layout_conversion_wrapWidth="84" tools:layout_conversion_wrapHeight="84"/>


    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/plant_care"
            android:textColor="#FFFFFF"
            android:textSize="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="116dp"
            android:layout_marginEnd="60dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/about"
            tools:layout_conversion_wrapWidth="402" tools:layout_conversion_wrapHeight="100"/>
    <Button
            android:text="@string/diseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/id_diseases"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_conversion_wrapWidth="1080" tools:layout_conversion_wrapHeight="126"
            app:layout_constraintEnd_toEndOf="parent" android:background="@color/ic_launcher_background"
            android:textColor="@android:color/background_light"/>
    <ImageButton
            android:layout_width="253dp"
            android:layout_height="255dp" app:srcCompat="@drawable/scan" android:id="@+id/id_scan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            tools:layout_conversion_wrapWidth="664"
            tools:layout_conversion_wrapHeight="669"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/id_diseases"
            app:layout_constraintVertical_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>