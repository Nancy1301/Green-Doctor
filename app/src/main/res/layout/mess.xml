<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="61dp"
            app:layout_constraintEnd_toStartOf="@+id/mess_num" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:textSize="20dp"/>
    <EditText
            android:layout_width="202dp"
            android:layout_height="66dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/mess_num"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="85dp" android:layout_marginStart="137dp"
            app:layout_constraintTop_toBottomOf="@+id/mess_num"/>
</android.support.constraint.ConstraintLayout>